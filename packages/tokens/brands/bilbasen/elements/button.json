          "value": "{color.greyscale.white}"
        },
        "hover": {
          "value": "{color.greyscale.white}"
        }
      },
      "border": {
        "@": {
          "value": "{border.width} solid {color.greyscale.900}"
        },
        "hover": {
          "value": "{border.width} solid {color.ui.action}"
        }
      },
      "border-radius": {
        "value": "{border.radius}"
      },
      "color": {
        "@": {
          "value": "{color.greyscale.900}"
